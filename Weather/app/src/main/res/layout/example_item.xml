<?xml version="1.0" encoding="utf-8"?>
<androidx.leanback.widget.BaseCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="320dp"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/material_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#80A9A9A9"
        app:cardElevation="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="325dp"
        android:orientation="vertical"
        android:padding="16dp">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp" />

        <TextView
            android:id="@+id/city_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:style="bold"
            android:text="Sabana Grande: "
            />
        <ImageView
            android:id="@+id/image_view"
            android:layout_width="160dp"
            android:layout_height="117dp"
            android:layout_gravity="center"
            android:outlineProvider="bounds"
            android:src="@drawable/sunny"/>

        <TextView
            android:id="@+id/temperature_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="90°"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Cond_TV"
            android:textSize="10sp"
            android:layout_gravity="center"
            android:text="Clear Day "
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Humdt_TV"
            android:textSize="8sp"
            android:text="63% "
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_gravity="center"

            android:orientation="vertical">

            <ImageView
                android:id="@+id/mainRainIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="4dp"
                android:src="@drawable/rain" />



        </LinearLayout>

        <!--Borrar Later -->

        <TextView
            android:id="@+id/descMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:textStyle="bold" />

        <!--Borrar Later^^ -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/FeelTV"
            android:textSize="9sp"
            android:text="88°"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/PrecipTV"
            android:textSize="8sp"
            android:text="0%: "
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:id="@+id/TimeTV"
            android:text="America/PuertoRico: "
            />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

</androidx.leanback.widget.BaseCardView>